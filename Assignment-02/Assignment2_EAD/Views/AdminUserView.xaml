<UserControl x:Class="Assignment2_EAD.Views.AdminUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment2_EAD.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="BlanchedAlmond">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <TextBlock  Grid.Row="0"  TextAlignment="Center" Text="Welcome To Online Grocery Store"  FontWeight="Bold" FontSize="30" Margin="0,0,0,57" ></TextBlock>

        <Button  Command="{Binding cmd1}" CommandParameter="Admin" Background="AliceBlue" Name="admin" Content="Admin"  Grid.Row="1"  FontSize="18" Margin="264,0,264,75" />
        <Button  Command="{Binding cmd1}" CommandParameter="Customer" Background="AliceBlue" Name="customer" Content="Customer" Grid.Row="1" FontSize="18" Margin="264,130,264,92" Grid.RowSpan="2" />

    </Grid>
</UserControl>
